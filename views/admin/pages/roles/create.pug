extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 

  h1.title Thêm mới nhóm quyền

  .card.mb-3 
    .card-header Tạo nhóm quyền 
    .card-body 
      form(
        action=`${prefixAdmin}/roles/create`
        method="POST"
      )
        div(class="form-group")
          lable(for="title") Tiêu đề
          input(
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
          )
        div(class="form-group")
          lable(for="desc") Mô tả
          input(
            type="text"
            class="form-control"
            id="desc"
            name="description"
          )
        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Tạo mới