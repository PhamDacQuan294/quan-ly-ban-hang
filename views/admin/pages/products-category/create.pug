extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  h1.title Thêm mới danh mục sản phẩm

  +alert-error(5000)

  .card.mb-3 
    .card-header Danh sách
    .card-body 
      form(
        action=`${prefixAdmin}/products-category/create`
        method="POST"
        enctype="multipart/form-data"
        id="form-create-products-category"
      )
        div(class="form-group")
          label(for="title") Tiêu đề
          input(
            type="text"
            class="form-control"
            id="title"
            name="title"
          )
        div(class="form-group")
          label(for="parent_id") Danh mục cha
          input(
            type="text"
            class="form-control"
            id="parent_id"
            name="parent_id"
          )
        div(class="form-group")
          lable(for="desc") Mô tả
          textarea(
            type="text"
            class="form-control textarea-mce"
            id="desc"
            name="description"
            rows="5"
            textarea-mce
          )
        div(
          class="form-group"
          upload-image 
        )
          label(for="thumbnail") Ảnh
          input(
            type="file"
            class="form-control-file"
            id="thumbnail"
            name="thumbnail"
            accept="image/*"
            upload-image-input
          )
          img(
            src=""
            class="image-preview"
          )
        div(class="form-group")
          label(for="position") Vị trí
          input(
            type="number"
            class="form-control"
            id="position"
            name="position"
            placeholder="Tu dong tang"
            min="1"
          )
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked
          )
          label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="inactive"
          )
          label(for="statusActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Tạo mới
  script(src="/admin/js/product.js")